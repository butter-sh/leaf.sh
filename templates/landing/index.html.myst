<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{project_name}} - {{project_description}}</title>

  <script src="https://cdn.tailwindcss.com?plugins=forms,typography"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'system-ui', 'sans-serif'],
          }
        }
      }
    }
  </script>

  <link rel="stylesheet" href="carbon.css">
</head>
<body class="carbon-bg text-slate-100">
  {{> _header}}

  <!-- Hero Section -->
  <header class="py-20 px-4">
    <div class="max-w-7xl mx-auto text-center">
{{#if icon}}
      <div class="inline-block mb-8 animate-fade-in">
        <img src="{{icon}}" alt="{{project_name}} icon" class="w-24 h-24 mx-auto">
      </div>
{{/if}}
      <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in" style="color: var(--carbon-light);">
        {{project_name}}
      </h1>
      <p class="text-xl md:text-2xl text-slate-300 mb-8 max-w-3xl mx-auto animate-fade-in">
        {{project_description}}
      </p>
      <div class="flex justify-center gap-4 mt-8 animate-fade-in">
{{#if github_org}}
        <a href="{{github_org}}" target="_blank" class="cta-gradient px-6 py-3 rounded-lg font-semibold text-slate-900 transition">
          View on GitHub
        </a>
{{/if}}
        <a href="#projects" class="cta-secondary px-6 py-3 rounded-lg font-semibold transition">
          Explore Projects
        </a>
      </div>
    </div>
  </header>

  <!-- Projects Section -->
  <main id="projects" class="py-16 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center" style="color: var(--carbon-light);">
        Projects
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each projects}}
        {{> _project_card}}
        {{/each}}
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="py-12 px-4 mt-20 text-slate-300" style="background: rgba(26, 26, 26, 0.95); border-top: 1px solid rgba(134, 239, 172, 0.2);">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-lg mb-2">
        Part of the <a href="{{github_org}}" class="font-semibold hover:underline transition" style="color: var(--carbon-light);">{{project_name}}</a> ecosystem
      </p>
      <p class="text-sm text-slate-500">
        Unlimited. Independent. Fresh.
      </p>
    </div>
  </footer>

  <!-- Scroll to Top Button -->
  <button id="scrollToTop" class="fixed bottom-8 right-8 p-4 rounded-full transition-all duration-300 opacity-0 pointer-events-none z-50" style="background: linear-gradient(135deg, var(--carbon-light) 0%, var(--carbon-light-dim) 100%); box-shadow: 0 4px 12px rgba(134, 239, 172, 0.4);">
    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7"/>
    </svg>
  </button>

  <script>
    // Scroll to top button
    const scrollToTopBtn = document.getElementById('scrollToTop');
    if (scrollToTopBtn) {
      window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
          scrollToTopBtn.style.opacity = '1';
          scrollToTopBtn.style.pointerEvents = 'auto';
        } else {
          scrollToTopBtn.style.opacity = '0';
          scrollToTopBtn.style.pointerEvents = 'none';
        }
      });

      scrollToTopBtn.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }
  </script>
</body>
</html>
