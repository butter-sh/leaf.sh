<!DOCTYPE html>
<html lang="en" class="dark scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{project_name}} - {{project_description}}</title>

  {{> _head}}
</head>
<body class="carbon-bg text-slate-100">
  {{> _header}}

  <!-- Hero Section -->
  <header class="py-20 px-4">
    <div class="max-w-7xl mx-auto text-center">
      {{> _hero_logo}}
      <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in" style="color: var(--carbon-light);">
        {{project_name}}
      </h1>
      <p class="text-xl md:text-2xl text-slate-300 mb-8 max-w-3xl mx-auto animate-fade-in">
        {{project_description}}
      </p>
      <div class="flex justify-center gap-4 mt-8 animate-fade-in">
{{#if github_url}}
        <a href="{{github_url}}" target="_blank" class="cta-gradient px-6 py-3 rounded-lg font-semibold text-slate-900 transition">
          View on GitHub
        </a>
{{/if}}
        <a href="#projects" class="cta-secondary px-6 py-3 rounded-lg font-semibold transition">
          Explore Projects
        </a>
      </div>
    </div>
  </header>

  <!-- Projects Section -->
  <main id="projects" class="py-16 px-4">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center" style="color: var(--carbon-light);">
        Projects
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {{#each projects}}
        {{> _project_card}}
        {{/each}}
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="py-12 px-4 mt-20 text-slate-300" style="background: rgba(26, 26, 26, 0.95); border-top: 1px solid rgba(134, 239, 172, 0.2);">
    <div class="max-w-7xl mx-auto text-center">
      <p class="text-lg mb-2">
        Part of the <a href="{{github_url}}" class="font-semibold hover:underline transition" style="color: var(--carbon-light);">{{project_name}}</a> ecosystem
      </p>
      <p class="text-sm text-slate-500">
        Unlimited. Independent. Fresh.
      </p>
    </div>
  </footer>

  {{> _scroll_to_top}}
</body>
</html>
